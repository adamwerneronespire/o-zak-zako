/ZAK/AFA_ELO-AS4USER =
/ZAK/AFA_ELV-AS4USER .
/ZAK/AFA_ELO-AS4DATE =
/ZAK/AFA_ELV-AS4DATE .
/ZAK/AFA_ELO-AS4TIME =
/ZAK/AFA_ELV-AS4TIME .
    IF SY-SUBRC = 0.
    UPDATE /ZAK/AFA_ELO .
    ELSE.
