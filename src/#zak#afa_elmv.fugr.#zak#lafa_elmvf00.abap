FORM DB_UPD_/ZAK/AFA_ELV .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO /ZAK/AFA_ELV.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_/ZAK/AFA_ELV-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM /ZAK/AFA_ELO WHERE
  BUKRS = /ZAK/AFA_ELV-BUKRS AND
  BTYPE = /ZAK/AFA_ELV-BTYPE AND
  ABEVAZ = /ZAK/AFA_ELV-ABEVAZ AND
  HKONT_FROM = /ZAK/AFA_ELV-HKONT_FROM AND
  HKONT_TO = /ZAK/AFA_ELV-HKONT_TO AND
  BLART = /ZAK/AFA_ELV-BLART AND
  MWSKZ = /ZAK/AFA_ELV-MWSKZ AND
  ATYPE = /ZAK/AFA_ELV-ATYPE .
    IF SY-SUBRC = 0.
    DELETE /ZAK/AFA_ELO .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM /ZAK/AFA_ELO WHERE
  BUKRS = /ZAK/AFA_ELV-BUKRS AND
  BTYPE = /ZAK/AFA_ELV-BTYPE AND
  ABEVAZ = /ZAK/AFA_ELV-ABEVAZ AND
  HKONT_FROM = /ZAK/AFA_ELV-HKONT_FROM AND
  HKONT_TO = /ZAK/AFA_ELV-HKONT_TO AND
  BLART = /ZAK/AFA_ELV-BLART AND
  MWSKZ = /ZAK/AFA_ELV-MWSKZ AND
  ATYPE = /ZAK/AFA_ELV-ATYPE .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR /ZAK/AFA_ELO.
    ENDIF.
/ZAK/AFA_ELO-MANDT =
/ZAK/AFA_ELV-MANDT .
/ZAK/AFA_ELO-BUKRS =
/ZAK/AFA_ELV-BUKRS .
/ZAK/AFA_ELO-BTYPE =
/ZAK/AFA_ELV-BTYPE .
/ZAK/AFA_ELO-ABEVAZ =
/ZAK/AFA_ELV-ABEVAZ .
/ZAK/AFA_ELO-HKONT_FROM =
