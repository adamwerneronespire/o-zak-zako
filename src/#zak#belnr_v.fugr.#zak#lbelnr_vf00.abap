FORM DB_UPD_/ZAK/OUT_BELNR_V .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO /ZAK/OUT_BELNR_V.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_/ZAK/OUT_BELNR_V-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM /ZAK/OUT_BELNR WHERE
  BUKRS = /ZAK/OUT_BELNR_V-BUKRS AND
  GJAHR = /ZAK/OUT_BELNR_V-GJAHR AND
  BELNR = /ZAK/OUT_BELNR_V-BELNR .
    IF SY-SUBRC = 0.
    DELETE /ZAK/OUT_BELNR .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM /ZAK/OUT_BELNR WHERE
  BUKRS = /ZAK/OUT_BELNR_V-BUKRS AND
  GJAHR = /ZAK/OUT_BELNR_V-GJAHR AND
  BELNR = /ZAK/OUT_BELNR_V-BELNR .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR /ZAK/OUT_BELNR.
    ENDIF.
/ZAK/OUT_BELNR-MANDT =
/ZAK/OUT_BELNR_V-MANDT .
/ZAK/OUT_BELNR-BUKRS =
/ZAK/OUT_BELNR_V-BUKRS .
/ZAK/OUT_BELNR-GJAHR =
/ZAK/OUT_BELNR_V-GJAHR .
/ZAK/OUT_BELNR-BELNR =
/ZAK/OUT_BELNR_V-BELNR .
/ZAK/OUT_BELNR-AS4USER =
/ZAK/OUT_BELNR_V-AS4USER .
/ZAK/OUT_BELNR-AS4DATE =
/ZAK/OUT_BELNR_V-AS4DATE .
/ZAK/OUT_BELNR-AS4TIME =
/ZAK/OUT_BELNR_V-AS4TIME .
    IF SY-SUBRC = 0.
    UPDATE /ZAK/OUT_BELNR .
    ELSE.
    INSERT /ZAK/OUT_BELNR .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_/ZAK/OUT_BELNR_V-UPD_FLAG,
STATUS_/ZAK/OUT_BELNR_V-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
