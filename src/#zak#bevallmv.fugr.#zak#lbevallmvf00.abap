   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM /ZAK/BEVALLO WHERE
  BUKRS = /ZAK/BEVALLV-BUKRS AND
  BTYPE = /ZAK/BEVALLV-BTYPE AND
  GJAHR = /ZAK/BEVALLV-GJAHR AND
