/ZAK/BEVALLI-ZINDEX =
/ZAK/BEVALLI_MV-ZINDEX .
/ZAK/BEVALLI-FLAG =
/ZAK/BEVALLI_MV-FLAG .
/ZAK/BEVALLI-DWNDT =
/ZAK/BEVALLI_MV-DWNDT .
/ZAK/BEVALLI-DATUM =
/ZAK/BEVALLI_MV-DATUM .
/ZAK/BEVALLI-UZEIT =
/ZAK/BEVALLI_MV-UZEIT .
/ZAK/BEVALLI-UNAME =
/ZAK/BEVALLI_MV-UNAME .
/ZAK/BEVALLI-ONJF =
/ZAK/BEVALLI_MV-ONJF .
    IF SY-SUBRC = 0.
    UPDATE /ZAK/BEVALLI .
    ELSE.
    INSERT /ZAK/BEVALLI .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_/ZAK/BEVALLI_MV-UPD_FLAG,
STATUS_/ZAK/BEVALLI_MV-UPD_CHECKD.
