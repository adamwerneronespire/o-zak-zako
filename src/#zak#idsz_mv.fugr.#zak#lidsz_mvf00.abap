     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM /ZAK/GET_IDSZ WHERE
  BUKRS = /ZAK/GET_IDSZ_MV-BUKRS AND
  GSBER = /ZAK/GET_IDSZ_MV-GSBER AND
  PRCTR = /ZAK/GET_IDSZ_MV-PRCTR .
    IF SY-SUBRC = 0.
    DELETE /ZAK/GET_IDSZ .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
