FORM DB_UPD_/ZAK/IGCUST_V .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO /ZAK/IGCUST_V.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_/ZAK/IGCUST_V-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM /ZAK/IGCUST WHERE
  TEXTTYPE = /ZAK/IGCUST_V-TEXTTYPE AND
  BTYPE = /ZAK/IGCUST_V-BTYPE AND
  BSZNUM = /ZAK/IGCUST_V-BSZNUM .
    IF SY-SUBRC = 0.
    DELETE /ZAK/IGCUST .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM /ZAK/IGCUST WHERE
  TEXTTYPE = /ZAK/IGCUST_V-TEXTTYPE AND
  BTYPE = /ZAK/IGCUST_V-BTYPE AND
  BSZNUM = /ZAK/IGCUST_V-BSZNUM .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR /ZAK/IGCUST.
    ENDIF.
/ZAK/IGCUST-MANDT =
/ZAK/IGCUST_V-MANDT .
/ZAK/IGCUST-TEXTTYPE =
/ZAK/IGCUST_V-TEXTTYPE .
/ZAK/IGCUST-BTYPE =
/ZAK/IGCUST_V-BTYPE .
/ZAK/IGCUST-BSZNUM =
/ZAK/IGCUST_V-BSZNUM .
/ZAK/IGCUST-TDNAME =
/ZAK/IGCUST_V-TDNAME .
/ZAK/IGCUST-AS4USER =
/ZAK/IGCUST_V-AS4USER .
/ZAK/IGCUST-AS4DATE =
/ZAK/IGCUST_V-AS4DATE .
/ZAK/IGCUST-AS4TIME =
/ZAK/IGCUST_V-AS4TIME .
    IF SY-SUBRC = 0.
    UPDATE /ZAK/IGCUST ##WARN_OK.
    ELSE.
    INSERT /ZAK/IGCUST .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_/ZAK/IGCUST_V-UPD_FLAG,
STATUS_/ZAK/IGCUST_V-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
