FORM DB_UPD_/ZAK/KUNNR_CST_V .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO /ZAK/KUNNR_CST_V.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_/ZAK/KUNNR_CST_V-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM /ZAK/KUNNR_CST WHERE
  KUNNR = /ZAK/KUNNR_CST_V-KUNNR AND
  DATBI = /ZAK/KUNNR_CST_V-DATBI .
    IF SY-SUBRC = 0.
    DELETE /ZAK/KUNNR_CST .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM /ZAK/KUNNR_CST WHERE
  KUNNR = /ZAK/KUNNR_CST_V-KUNNR AND
  DATBI = /ZAK/KUNNR_CST_V-DATBI .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR /ZAK/KUNNR_CST.
    ENDIF.
/ZAK/KUNNR_CST-MANDT =
/ZAK/KUNNR_CST_V-MANDT .
/ZAK/KUNNR_CST-KUNNR =
/ZAK/KUNNR_CST_V-KUNNR .
