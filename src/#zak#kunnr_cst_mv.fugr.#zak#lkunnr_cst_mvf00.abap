/ZAK/KUNNR_CST-AS4DATE =
/ZAK/KUNNR_CST_V-AS4DATE .
/ZAK/KUNNR_CST-AS4TIME =
/ZAK/KUNNR_CST_V-AS4TIME .
    IF SY-SUBRC = 0.
    UPDATE /ZAK/KUNNR_CST .
    ELSE.
    INSERT /ZAK/KUNNR_CST .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_/ZAK/KUNNR_CST_V-UPD_FLAG,
STATUS_/ZAK/KUNNR_CST_V-UPD_CHECKD.
