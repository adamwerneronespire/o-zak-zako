FORM DB_UPD_/ZAK/UREPI_FELDV .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO /ZAK/UREPI_FELDV.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_/ZAK/UREPI_FELDV-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM /ZAK/UREPI_FELD WHERE
  BUKRS = /ZAK/UREPI_FELDV-BUKRS AND
  GJAHR = /ZAK/UREPI_FELDV-GJAHR AND
  BELNR = /ZAK/UREPI_FELDV-BELNR AND
  BUZEI = /ZAK/UREPI_FELDV-BUZEI .
    IF SY-SUBRC = 0.
    DELETE /ZAK/UREPI_FELD .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM /ZAK/UREPI_FELD WHERE
  BUKRS = /ZAK/UREPI_FELDV-BUKRS AND
  GJAHR = /ZAK/UREPI_FELDV-GJAHR AND
  BELNR = /ZAK/UREPI_FELDV-BELNR AND
  BUZEI = /ZAK/UREPI_FELDV-BUZEI .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR /ZAK/UREPI_FELD.
    ENDIF.
/ZAK/UREPI_FELD-MANDT =
/ZAK/UREPI_FELDV-MANDT .
/ZAK/UREPI_FELD-BUKRS =
/ZAK/UREPI_FELDV-BUKRS .
/ZAK/UREPI_FELD-GJAHR =
/ZAK/UREPI_FELDV-GJAHR .
/ZAK/UREPI_FELD-BELNR =
/ZAK/UREPI_FELDV-BELNR .
/ZAK/UREPI_FELD-BUZEI =
/ZAK/UREPI_FELDV-BUZEI .
    IF SY-SUBRC = 0.
    UPDATE /ZAK/UREPI_FELD .
    ELSE.
    INSERT /ZAK/UREPI_FELD .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_/ZAK/UREPI_FELDV-UPD_FLAG,
STATUS_/ZAK/UREPI_FELDV-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
